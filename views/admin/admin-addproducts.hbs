{{>admin-header}}
<section>
  <div class="container mx-auto">
    <form class="form-horizontal " action="/admin/addProduct" method="post" enctype="multipart/form-data">
      <h3>Products Managment</h3>

      <div class="">
        <label class="col-md-4 control-label mt-4" for="product_name">PRODUCT NAME</label>
        <input id="productname" name="productname" placeholder="PRODUCT NAME" class="form-control input-md mt-4"
          type="text" required>
      </div>

      <div class="">
        <label class="col-md-4 control-label mt-4" for="product_brand">BRAND</label>
        <input id="product_name_fr" name="productbrand" placeholder="BRAND" class="form-control input-md mt-4"
          type="text" required>
      </div>

      <div class="">
        <label class="col-md-4 control-label mt-4" for="product_brand">STOCK</label>
        <input id="product_name_fr" name="stock" placeholder="STOCK" class="form-control input-md mt-4" type="text"
          required>
      </div>
      <!-- Select Basic -->

      <div class="form-group mt-4">
        <label class=" " for="">CATEGORY</label>
        <br> <br>
        <select class=" input-md mt-4" name="category" required>
          {{#each categories}}
          <option value="{{this.category}}">{{this.category}}</option>
          {{/each}}
        </select>
      </div>

      <br><br>
      <!-- Text input-->
      <div class="form-group mt-4">
        <label class="col-md-4 control-label mt-4" for="product_price">ORIGINAL PRICE</label>
        <input id="product_weight" name="originalprice" placeholder="ORIGINAL PRICE" class="form-control input-md mt-4"
          type="text" min="1" required>

      </div>

      <div class="form-group mt-4">
        <label class="col-md-4 control-label mt-4" for="product_price">OFFER PRICE</label>
        <input id="product_weight" name="productprice" placeholder="OFFER PRICE" class="form-control input-md mt-4"
          type="text" required>

      </div>

      <!-- Textarea -->
      <div class="form-group mt-4">
        <label class="col-md-4 control-label mt-4" for="product_description">PRODUCT DESCRIPTION</label>
        <textarea class="form-control mt-4" id="productdescription" name="productdescription"
          placeholder="PRODUCT DESCRIPTION" required></textarea>
      </div>

      <div class="form-group mt-4">
        <label class="col-md-4 control-label mt-4" for="filebutton">PRODUCT IMAGE</label><br>
        <input id="filebutton" name="image" class="input-file mt-4" type="file" multiple required>
      </div>
      <br>
      <button type="submit" id="singlebutton" class="btn btn-primary">Add Product</button>
  </div>
  </form>
  </div>
</section>