{{>admin-header}}
 <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>users</h4>
                        <div class="breadcrumb__links">
                            <a href="/admin">Home</a>
                            <span>Users</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<section class="container mx-2 my-3">
    <a href="/admin/blocked-users" class="btn btn-outline-primary " role="button" aria-pressed="true">Blocked Users</a>
    <br>
<div>
  <section class="container mx-2 my-3">
    <a href="" class="btn-lg active" role="button" aria-pressed="true" data-bs-toggle="modal" data-bs-target="">User Managment</a>
    <br>
  </section>
</div>
<section class="mx-2">
  <div class="container">
    <table id="myTable" class="table table-striped " style="width:100%">
      <thead>
        <tr>
          <th scope="col">NO</th>
          <th scope="col">NAME</th>
          <th scope="col">EMAIL</th>
          <th scope="col">MOBILE</th>
          <th scope="col">OPTIONS</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{this.name}}</td>
           <td>{{this.email}}</td>
            <td>{{this.mon}}</td>
            <td>
             <a href="/admin/userBlock?id={{this._id}}" onclick="return confirm('Are you sure you want to block {{this.name}}?')"><button type="button" class="btn btn-outline-danger">BLOCK</button></a> 
            </td>
        </tr>
        {{/each}}
        
      </tbody>
    </table>
  </div>
</section>

<script>
  $(document).ready(function() {
    $('#myTable').DataTable();
  });
</script>