 <script>
  // Function to convert table data to CSV format
  function convertToCSV() {
    const tableBody = document.getElementById("table-body");
    const rows = Array.from(tableBody.getElementsByTagName("tr"));
    const csvRows = [];

    rows.forEach((row) => {
      const cells = Array.from(row.getElementsByTagName("td"));
      const csvValues = cells.map((cell) => cell.innerText);
      const csvRow = csvValues.join(",");
      csvRows.push(csvRow);
    });

    return csvRows.join("\n");
  }

  // Function to download table data as CSV
  function downloadCSV() {
    const csvContent = "data:text/csv;charset=utf-8," + encodeURIComponent(convertToCSV());
    const link = document.createElement("a");
    link.href = csvContent;
    link.download = "table_data.csv";
    link.click();
  }

  // Function to download table data as PDF
  function downloadPDF() {
    const element = document.getElementById("myTable"); // Update the id to "table-data"

    html2pdf()
      .from(element)
      .set({ filename: "table_data.pdf", margin: 10 })
      .save();
  }

  // Event listeners for the download buttons
  document.getElementById("download-csv-btn1").addEventListener("click", function () {
    swal({
      title: "Downloading CSV...",
      icon: "success",
      buttons: false,
      timer: 1500,
    });
    downloadCSV();
  });

  document.getElementById("download-pdf-btn1").addEventListener("click", function () {
    swal({
      title: "Downloading PDF...",
      icon: "success",
      buttons: false,
      timer: 1500,
    });
    downloadPDF();
  });

  // Event listeners for the download buttons - Repeat the same for other buttons if needed
  document.getElementById("download-csv-btn2").addEventListener("click", function () {
    swal({
      title: "Downloading CSV...",
      icon: "success",
      buttons: false,
      timer: 1500,
    });
    downloadCSV();
  });

  document.getElementById("download-pdf-btn2").addEventListener("click", function () {
    swal({
      title: "Downloading PDF...",
      icon: "success",
      buttons: false,
      timer: 1500,
    });
    downloadPDF();
  });
</script>




